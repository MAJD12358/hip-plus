  "text": {
    "description": "hip+ empowers developers with advanced features for concurrent and functional programming.",
    "website": "https://hippluslang.org"
  },
  "functions": [
    {
      "name": "calculateFactorial",
      "type": "function",
      "parameters": [
        {
          "name": "n",
          "type": "int"
        }
      ],
      "body": "if (n <= 1) { return 1; } else { return n * calculateFactorial(n - 1); }"
    },
    {
      "name": "fetchData",
      "type": "async function",
      "parameters": [
        {
          "name": "url",
          "type": "string"
        }
      ],
      "body": "let response = await fetch(url); let data = await response.json(); return data;"
    }
  ]
